{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*":    ["src/screens/*"],
      "@hooks/*":      ["src/hooks/*"],
      "@services/*":   ["src/services/*"],
      "@store/*":      ["src/store/*"],
      "@utils/*":      ["src/utils/*"],
      "@assets/*":     ["src/assets/*"]
    }
  },
  "include": ["src", "App.tsx", "index.js", "index.ts"]
}
